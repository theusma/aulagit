<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="Avalie">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>br.usjt.avalie.model.entity.Usuario</class>
		<class>br.usjt.avalie.model.entity.Estabelecimento</class>
		<class>br.usjt.avalie.model.entity.Categoria</class>
		<class>br.usjt.avalie.model.entity.Avaliacao</class>
		<class>br.usjt.avalie.model.entity.Cadeirante</class>
		<class>br.usjt.avalie.model.entity.Instrucao</class>
		<class>br.usjt.avalie.model.entity.Sanitario</class>
		<class>br.usjt.avalie.model.entity.Sinalizacao</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>